<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/home.css">
    <title><%= title %></title>
</head>
<body>
    <h1> Codeorzo / home page </h1>

    <section id="feed-posts">
        <h4>Posts</h4>
        
        <!-- if user is not signed in, form section will not be visible to them -->
        <% if(locals.user) { %>
        <form action="/posts/create" id="new-post-form" method="post">
            <textarea name="content" cols="30" rows="3" placeholder="Type here..." required></textarea>
            <input type="submit" value="post">
        </form>
        <% } %>
    </section>

    <!-- This is display all the post present in db -->
    <% for (let i of post_list) { %>
        <ul>
            <li> 
                <p><%= i.user.name %></p>
                <h3><%= i.content %></h3>
                <small> <%= i.createdAt %> </small>
                <div class="post-comments">
                    <% if(locals.user) { %>
                        <form action="/comments/create" method="POST">
                            <input type="text" name="content" placeholder="Type comment here ... " required>
                            <!-- it will send the post id as a attribute-->
                            <input type="hidden" name="post" value="<%= i._id %>"> 
                            <input type="submit" value="Add comments">
                        </form>

                        <div class="post-comments-list">
                            <ul id="post-comments-<%= i._id %>">
                                <% for(let comment of i.comments) { %>
                                    <p>
                                        <%= comment.content %>
                                        <br>
                                        <small>
                                            -<%= comment.user.name %>
                                        </small>
                                    </p>
                                <% } %>
                            </ul>
                        </div>
                    <% } %>
                </div>
            </li>
        </ul>
    <% } %>
</body>
</html>